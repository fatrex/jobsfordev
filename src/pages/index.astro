---
import Layout from '../layouts/Layout.astro';
import JobCard from '../components/JobCard.astro';
import { jobs, fetch as fetchJobs } from '../stores/jobs'

await fetchJobs();
---

<Layout title="Jobs for Dev | Offerte di lavoro per developer curate da developer">
  <main class="container mx-auto">
    <div class="pt-5 py-10">
      <img src="/logo.svg" />
    </div>
    <div class="flex flex-col space-y-10">
      {jobs.get().map((job) => (
      <JobCard job={job} />
      ))}
    </div>
  </main>
</Layout>